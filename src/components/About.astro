---
import DownloadIcon from "../icons/Download.astro";
import SendIcon from "../icons/Send.astro";
const cvURL =
  "https://drive.google.com/file/d/1HF_muFL3rThWa1D6SmLEjlascO4f2PK7/view?usp=sharing";
---

<div class="flex flex-col md:flex-row items-center gap-5 md:gap-16">
  <img
    id="mainImage"
    class="object-fill rounded-full max-h-48 md:max-h-64 w-auto"
    src="/irl_cropped.webp"
    alt="Christopher Sae Glood"
    width="300"
    height="300"
  />
  <div class="flex flex-col w-full max-w-lg gap-3 text-center md:text-left">
    <h1 class="text-3xl font-bold text-primary-900">Christopher Sae Glood</h1>
    <h2 class="text-2xl font-bold text-accent-500">Programador Fullstack</h2>
    <p class="text-primary-900 text-wrap">
      Soy un programador fullstack con experiencia en el desarrollo de
      aplicaciones web. Me apasiona la música y la programación.
    </p>
    <div class="flex flex-row gap-3 mt-3 w-full">
      <a
        href={cvURL}
        target="_blank"
        class="flex flex-row justify-center items-center gap-2 w-full bg-primary text-gray-300 rounded-xl p-3 hover:bg-accent hover:text-accent-900 transition-all ease-in-out duration-200"
      >
        <DownloadIcon classes="h-6" />
        <span class="font-semibold">CV</span>
      </a>
      <a
        href="mailto:christopherglood@gmail.com"
        class="flex flex-row justify-center items-center gap-2 w-full bg-primary text-gray-300 rounded-xl p-3 hover:bg-accent hover:text-accent-900 transition-all ease-in-out duration-200"
      >
        <SendIcon classes="h-6" />
        <span class="font-semibold">Contáctame</span>
      </a>
    </div>
  </div>
</div>
