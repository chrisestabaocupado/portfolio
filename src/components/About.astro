---
import DownloadIcon from "../icons/Download.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import Verified from "../icons/Verified.astro";

const cvURL =
  "https://drive.google.com/file/d/1HF_muFL3rThWa1D6SmLEjlascO4f2PK7/view?usp=sharing";
---

<div class="flex flex-col items-center gap-3 md:gap-12">
  <div class="relative">
    <img
      id="mainImage"
      class="object-fill rounded-full max-h-48 md:max-h-64 w-auto"
      src="/irl_cropped.webp"
      alt="Christopher Sae Glood"
      width="300"
      height="300"
    />
    <div class="absolute bottom-2 right-2 md:bottom-2 md:right-2 text-accent">
      <Verified classes="w-6 h-6 md:w-16 md:h-16" />
    </div>
  </div>

  <div
    class="flex flex-col items-center w-full max-w-lg gap-3 text-center md:text-left"
  >
    <span class="flex flex-col items-center">
      <h1 class="text-4xl font-bold text-light">Christopher Sae Glood</h1>
      <h2 class="text-2xl font-bold text-accent-500">Programador Fullstack</h2>
    </span>

    <div class="flex flex-row justify-around w-md">
      <a
        href="/CV_Christopher_Sae_Glood_Fullstack.pdf"
        target="_blank"
        class="flex flex-row justify-center items-center gap-2 w-fit bg-secondary hover:bg-secondary-hover text-text-inverted rounded-xl px-4 py-2 transition-colors duration-200"
      >
        <DownloadIcon classes="h-5" />
        <h4 class="">Descargar CV</h4>
      </a>
      <a
        href="https://linkedin.com/in/christopherglood/"
        target="_blank"
        class="flex flex-row justify-center items-center gap-2 w-fit border border-secondary hover:border-secondary-hover text-accent hover:text-accent-hover rounded-xl px-4 py-2 transition-colors duration-200"
      >
        <LinkedinIcon classes="h-5" />
        <h4 class="">Cont√°ctame</h4>
      </a>
    </div>
  </div>
</div>
