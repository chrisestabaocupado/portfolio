---
import DownloadIcon from "../icons/Download.astro";
import SendIcon from "../icons/Send.astro";
const cvURL =
  "https://drive.google.com/file/d/1HF_muFL3rThWa1D6SmLEjlascO4f2PK7/view?usp=sharing";
---

<div class="mb-4 flex flex-col md:flex-row gap-5 md:gap-16 items-center">
  <img class="rounded-full max-h-64" src="/irl_cropped.png" />
  <div class="flex flex-col w-full gap-4">
    <div class="flex flex-col gap-1 text-center md:text-start">
      <h1 class="text-3xl font-bold text-pink-300">
        Christopher Sae Glood<h1>
          <h2 class="text-2xl font-bold text-white">Programador Backend</h2>
          <p class="text-gray-200">
            Soy un Programador Web especializado en backend!
          </p>
        </h1>
        <div class="flex flex-row gap-5 mt-3">
          <a
            href={cvURL}
            target="_blank"
            class="flex flex-row justify-center items-center gap-2 w-full bg-gray-800 text-center text-white rounded-xl shadow-lg p-3 hover:bg-gray-600 hover:shadow-xl transition-all ease-in-out duration-200"
          >
            <DownloadIcon />
            <span>CV</span>
          </a>
          <a
            href="mailto:christopherglood@gmail.com"
            class="flex flex-row justify-center items-center gap-2 w-full bg-gray-800 text-center text-white rounded-xl shadow-lg p-3 hover:bg-gray-600 hover:shadow-xl transition-all ease-in-out duration-200"
          >
            <SendIcon />
            <span class="text-white">Contactame</span>
          </a>
        </div>
      </h1>
    </div>
  </div>
</div>
