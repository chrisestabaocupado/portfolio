---
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
---

<div class="h-full flex flex-col justify-center">
  <button
    id="socialLinks"
    class="flex flex-col gap-4 text-text lg:bg-background-500 hover:bg-primary-hover rounded-tr-2xl rounded-br-2xl p-4 transition-colors duration-200"
  >
    <a
      class="flex flex-row gap-2 hover:text-accent-hover transition-colors duration-200 items-end"
      href="https://www.linkedin.com/in/christopherglood/"
      target="_blank"
    >
      <Linkedin classes="h-8" />
    </a>
    <a
      class="flex flex-row gap-2 hover:text-accent-hover transition-colors duration-200 items-end"
      href="https://github.com/chrisestabaocupado"
      target="_blank"
    >
      <Github classes="h-8" />
    </a>
  </button>
</div>
