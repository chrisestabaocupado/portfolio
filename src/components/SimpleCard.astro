---
const { title, description, project_url, img_url,tags, key} = Astro.props;
const card_id = `project-card-${key}`;
const tags_id = `tags-${key}`;
---

<div id={card_id}class="flex flex-col gap-4 md:gap-10 md:flex-row">
	<div class="relative">
		<a href={project_url} class="md:w-1/2">
			<img class="rounded-2xl hover:scale-105 transition-transform duration-75 ease-in" src={img_url}>
		</a>
		<div id={tags_id} class="invisible absolute inset-0 flex gap-4 flex-wrap justify-center h-min m-auto bg-black bg-opacity-25">
			{
				tags.map((tag: String) => (
					<span class="px-3 py-0.5 text-black bg-pink-300 rounded-3xl shadow-lg">
					{tag}
					</span>
				))
			}
		</div>
	</div>
	<div class="flex flex-col gap-3 justify-between text-white md:py-4 md:w-1/2">
		<div>
			<h1 class="text-xl font-bold">{title}</h1>
		</div>

		<p>
			{description}
		</p>
		<button class="bg-gray-800 w-full px-5 py-2 rounded-lg hover:bg-gray-600 hover:scale-105 transition-all duration-75 ease-in-out">CÃ³digo</button>
	</div>
</div>

