---
const { title, description, project_url, img_url, tags, key, index } = Astro.props;
const card_id = `project-card-${key}`;
---

<article
  id={card_id}
  class=`flex w-full rounded-2xl gap-16 ${
  index % 2 === 0 ? "flex-row-reverse" : "flex-row"
  }`
>
  <div class="relative h-64 rounded-2xl overflow-hidden bg-cover bg-no-repeat w-1/2">
    <a href={project_url} class="group block w-full h-full cursor-pointer">
      <img
        class="object-cover object-center w-full h-full transition-transform duration-200 group-hover:scale-105"
        src={img_url}
        alt={title}
        width="600"
      />
    </a>
  </div>
  <div class="flex flex-col justify-center gap-3 w-1/2">
    <a href={project_url} class="group w-fit">
      <h1 class="text-lg text-light md:text-2xl font-bold group-hover:text-accent-hover transition-colors duration-200">{title}</h1>
    </a>

    <p class="text-text">
      {description}
    </p>

    <div class="flex flex-wrap gap-6 my-2">
      {
        tags.map((tag: string) => (
          <span class="text-sm md:text-sm bg-primary-900 text-text px-4 py-1 rounded-full hover:bg-primary-500 hover:text-accent-hover transition-colors duration-200 cursor-default">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</article>
