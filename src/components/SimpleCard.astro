---
import ArrowRoundedRight from '../icons/ArrowRoundedRight.astro';
const { title, description, project_url, img_url,tags, key} = Astro.props;
const card_id = `project-card-${key}`;
const tags_id = `tags-${key}`;
---

<a href={project_url} id={card_id} class="border-4 border-gray-600 transition-all duration-300 ease-in-out shadow-lg hover:shadow-0 hover:bg-gray-600 rounded-2xl flex flex-col gap-4 p-8 md:gap-10 md:flex-row">
	<div class="relative rounded-2xl overflow-hidden bg-cover bg-no-repeat">
		<img class="object-cover object-center w-full max-h-44 transition duration-300 ease-in-out hover:scale-110" src={img_url}>
		<div id={tags_id} class="invisible absolute inset-0 flex gap-4 flex-wrap justify-center h-min m-auto bg-black bg-opacity-25">
			{
				tags.map((tag: String) => (
					<span class="px-3 py-0.5 text-black bg-pink-300 rounded-3xl shadow-lg">
					{tag}
					</span>
				))
			}
		</div>
	</div>
	<div class="flex flex-col justify-between text-white md:py-4 md:w-1/2">
		<h1 class="text-2xl font-bold">{title}</h1>

		
		<p class="text-gray-300">
			{description}
		</p>
		

		<span class="flex items-end text-yellow-100 hover:text-pink-200 transition-color duration-300 ">
			<span>Más Información</span>
		</span>
	</div>
</a>

