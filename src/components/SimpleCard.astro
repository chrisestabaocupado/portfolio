---
import ArrowRoundedRight from '../icons/ArrowRoundedRight.astro';
const { title, description, project_url, img_url,tags, key} = Astro.props;
const card_id = `project-card-${key}`;
const tags_id = `tags-${key}`;
---

<div id={card_id} class="flex flex-col gap-4 md:gap-10 md:flex-row">
	<div class="relative rounded-2xl overflow-hidden bg-cover bg-no-repeat">
		<a href={project_url} class="md:w-1/2">
			<img class="transition duration-300 ease-in-out hover:scale-110" src={img_url}>
		</a>
		<div id={tags_id} class="invisible absolute inset-0 flex gap-4 flex-wrap justify-center h-min m-auto bg-black bg-opacity-25">
			{
				tags.map((tag: String) => (
					<span class="px-3 py-0.5 text-black bg-pink-300 rounded-3xl shadow-lg">
					{tag}
					</span>
				))
			}
		</div>
	</div>
	<div class="flex flex-col gap-1 justify-between text-white md:py-4 md:w-1/2">
		<div>
			<h1 class="text-xl font-bold">{title}</h1>
		</div>

		<p class="text-gray-200">
			{description}
		</p>

		<a href={project_url} class="flex flex-row gap-2 items-center text-gray-100 text-start w-full hover:text-pink-200 transition-color duration-300 [&_svg:hover]:stroke-yellow-500">
			<span>CÃ³digo</span>
			<ArrowRoundedRight tailwind="stroke-1 stroke-white" />
		</a>
	</div>
</div>

