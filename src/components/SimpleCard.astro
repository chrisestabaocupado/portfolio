---
/* import ArrowRoundedRight from "../icons/ArrowRoundedRight.astro"; */
const { title, description, project_url, img_url, tags, key } = Astro.props;
const card_id = `project-card-${key}`;
---

<a
  href={project_url}
  id={card_id}
  class="border-4 border-primary-500 transition-all duration-300 ease-in-out shadow-lg hover:bg-primary-500 rounded-2xl flex flex-col gap-4 p-8 md:p-8 project_card"
>
  <div class="relative h-56 rounded-2xl overflow-hidden bg-cover bg-no-repeat">
    <img
      class="object-cover object-center w-full h-full transition-transform duration-300 ease-in-out"
      src={img_url}
      alt={title}
    />
  </div>
  <div class="flex flex-col justify-between text-light-900">
    <h1 class="text-xl md:text-2xl font-bold">{title}</h1>

    <div class="flex flex-wrap gap-2 my-2">
      {
        tags.map((tag: string) => (
          <span class="text-xs md:text-sm text-primary-900 font-bold bg-tertiary px-2 py-1 rounded-lg">
            {tag}
          </span>
        ))
      }
    </div>

    <p class="text-justify">
      {description}
    </p>
  </div>
</a>

<script>
  const project_cards = document.querySelectorAll(".project_card");
  project_cards.forEach((card) => {
    var card_img = card.querySelector("div")?.querySelector("img");
    card.addEventListener("mouseover", () => {
      card_img?.classList.add("scale-110");
    });
    card.addEventListener("mouseout", () => {
      card_img?.classList.remove("scale-110");
    });
  });
</script>
