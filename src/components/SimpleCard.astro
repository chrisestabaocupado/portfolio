---
import ArrowRoundedRight from "../icons/ArrowRoundedRight.astro";
const { title, description, project_url, img_url, tags, key } = Astro.props;
const card_id = `project-card-${key}`;
const tags_id = `tags-${key}`;
---

<a
  href={project_url}
  id={card_id}
  class="border-4 border-gray-600 transition-all duration-300 ease-in-out shadow-lg hover:shadow-0 hover:bg-gray-600 rounded-2xl flex flex-col gap-4 p-8"
>
  <div class="relative h-56 rounded-2xl overflow-hidden bg-cover bg-no-repeat">
    <img
      class="object-cover object-center w-full h-full transition duration-300 ease-in-out hover:scale-110"
      src={img_url}
    />
  </div>
  <div class="flex flex-col justify-between text-white">
    <h1 class="text-2xl font-bold">{title}</h1>

    <div class="flex flex-row gap-2 my-1">
      {
        tags.map((tag: String) => (
          <span class="text-xs text-yellow-300 font-bold">{tag}</span>
        ))
      }
    </div>

    <p class="text-gray-300 text-justify">
      {description}
    </p>

    <!-- <span class="flex items-end text-yellow-200 hover:text-pink-200 transition-color duration-300 ">
			<span>Más Información</span>
		</span> -->
  </div>
</a>

